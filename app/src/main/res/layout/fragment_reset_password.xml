<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Reset Password"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailToConfirm"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="128dp"

        android:layout_marginEnd="24dp"
        android:background="@drawable/edittext_outline"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResetPassword" />

    <EditText
        android:id="@+id/confirmationCodeCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Confirmation Code"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="@+id/btnConfirmEmailAndSendCode"
        app:layout_constraintStart_toStartOf="@+id/btnConfirmEmailAndSendCode"
        app:layout_constraintTop_toBottomOf="@+id/btnConfirmEmailAndSendCode" />

    <Button
        android:id="@+id/btnConfirmEmailAndSendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Send Confirmation Code To E-mail"
        app:layout_constraintEnd_toEndOf="@+id/emailToConfirm"
        app:layout_constraintStart_toStartOf="@+id/emailToConfirm"
        app:layout_constraintTop_toBottomOf="@+id/emailToConfirm" />
</androidx.constraintlayout.widget.ConstraintLayout>