            android:textColor="#FFFFFF"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textViewReportSymptoms"
            app:layout_constraintStart_toStartOf="@+id/textViewReportSymptoms"
            app:layout_constraintTop_toBottomOf="@+id/textViewReportSymptoms" />

