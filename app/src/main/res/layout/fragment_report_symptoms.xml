            app:layout_constraintStart_toStartOf="@+id/imageFever" />

        <TextView
            android:id="@+id/textCough"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cough"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/imageCough"
            app:layout_constraintStart_toStartOf="@+id/imageCough" />

