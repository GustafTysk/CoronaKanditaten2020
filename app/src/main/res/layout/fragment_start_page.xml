<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartPageFragment">

    <TextView
        android:id="@+id/textViewStartPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Start Page"
        android:textAllCaps="true"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStartToRs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Report Symptoms"
        android:textAllCaps="true"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStartPage" />

    <Button
        android:id="@+id/btnStartToHeatmap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Show Heatmap"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnStartToRs"
        app:layout_constraintStart_toStartOf="@+id/btnStartToRs"
        app:layout_constraintTop_toBottomOf="@+id/btnStartToRs" />

    <Button
        android:id="@+id/btnStartToStatistics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Show Statistics"
        android:textAllCaps="true"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnStartToHeatmap"
        app:layout_constraintStart_toStartOf="@+id/btnStartToHeatmap"
        app:layout_constraintTop_toBottomOf="@+id/btnStartToHeatmap" />


</androidx.constraintlayout.widget.ConstraintLayout>